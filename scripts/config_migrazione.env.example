# Configurazione migrazione DOCS Mercury
# Copia questo file come .env e modifica i valori

# Database origine (DOCS standard)
SOURCE_DB_URL=postgresql://username:password@localhost:5432/docs_standard

# Database destinazione (DOCS Mercury)
DEST_DB_URL=postgresql://username:password@localhost:5432/docs_mercury

# Esempi per diversi tipi di database:

# PostgreSQL
# SOURCE_DB_URL=postgresql://user:pass@localhost:5432/docs_standard
# DEST_DB_URL=postgresql://user:pass@localhost:5432/docs_mercury

# MySQL
# SOURCE_DB_URL=mysql://user:pass@localhost:3306/docs_standard
# DEST_DB_URL=mysql://user:pass@localhost:3306/docs_mercury

# SQLite
# SOURCE_DB_URL=sqlite:///path/to/docs_standard.db
# DEST_DB_URL=sqlite:///path/to/docs_mercury.db

# Configurazione logging (opzionale)
LOG_LEVEL=INFO
LOG_FILE=logs/migrazione_docs_mercury.log

# Configurazione sicurezza (opzionale)
ENCRYPT_PASSWORDS=false
VALIDATE_EMAILS=true
SKIP_INACTIVE_USERS=false 